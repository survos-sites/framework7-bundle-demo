<div class="block"><p><b>{{ t }}</b></p>
    <h1>{{ 'tab.%s'|format(t)|trans }}</h1>
{#        This is the  {{ t }}  tab {{ _self }}#}
        {% set store = t %}
        {% set globals = {} %}

        <twig:dexie
                refreshEvent="tab-{{ t }}-show"
                :store="store"
                :globals="globals"
                :filter="{}"
                :caller="_self">

            <twig:block name="title">
                there are {{ rows|length }} rows
            </twig:block>

            <twig:block name="twig_template" id="hack_to_get_raw_data">
                <h1>{{ storeName }}</h1> <!-- passed in from dexie -->
                appName: {{ window.app.name }}
                <div class="list">
                    <ul>
                    {% for row in rows %}
                        <li>
                            <a href="/pages/obra/{{row.id}}" class="item-link">
                                <div class="item-content">
                                    <div class="item-inner">
                                        <div class="item-title">
                                           <b>{{ row.title|title }}</b>
                                        </div>
                                        <div class="item-after">
                                            {{ row.w }}
{#                                            {{ row|json_encode }}#}
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </li>
                    {% endfor %}
                    </ul>
                </div>

                there are {{ rows|length }} rows
                <!-- hack_to_get_raw_data -->
            </twig:block>

        </twig:dexie>
</div>
