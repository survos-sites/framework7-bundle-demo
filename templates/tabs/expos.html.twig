<div class="block">
    <h1>{{ 'tab.%s'|format(t)|trans }}</h1>
        {% set store = t %}
        {% set globals = {
            locale: app.locale
        } %}

        <twig:dexie
                refreshEvent="tab-{{ t }}-show"
                :store="store"
                :globals="globals"
                :filter="{locale: 'en'}"
                :caller="_self">

            <twig:block name="title">
                there are {{ rows|length }} rows
            </twig:block>

            <twig:block name="twig_template" id="hack_to_get_raw_data">
                {% set locale = globals.locale %}
                <h1>{{ storeName }}</h1> <!-- passed in from dexie -->
                <div class="list">
                    <ul>
                    {% for row in rows %}
                        <li>
                            <a href="/pages/expo/{{row.id}}" class="item-link">
                                <div class="item-content">
                                    <div class="item-inner
                                    ">
                                        <div class="item-title">
{#                                            {{ row|json_encode }}#}
                                           <b>{{ row.title[locale] }}</b>
                                        </div>
                                        <div class="item-after">
                                            {{ row.objCount }}
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </li>
                    {% endfor %}
                    </ul>
                </div>
                there are {{ rows|length }} rows
                <!-- hack_to_get_raw_data -->
            </twig:block>

        </twig:dexie>
</div>
